<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ReporterUI.Views.ToolbarView">

    <Border Classes="ToolBar">
        <Panel>
            <StackPanel Orientation="Horizontal">
                <Button Classes="ToolBtn search" Content="Поиск..." />
                <Button Classes="ToolBtn play" Content="Run report" />
            </StackPanel>
            <Button Classes="ToolBtn help" Content="Help" HorizontalAlignment="Right" />
        </Panel>
    </Border>
</UserControl>